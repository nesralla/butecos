<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.riosistemas.butecos">

    <supports-screens
        android:resizeable="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:anyDensity="true">
    </supports-screens>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>
    <uses-permission android:name="android.permission.CALL_PHONE"></uses-permission>
    <application android:name=".Preferences" android:icon="@mipmap/ic_lagoinha" android:label="@string/app_name" android:description="@string/app_description">
        <activity  android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Main"></activity>
        <activity android:name="Restaurants"></activity>
        <activity android:name="RestaurantsDetails"></activity>
        <activity android:name="Foods"></activity>
        <activity android:name="FoodsDetails"></activity>
        <activity android:name="About"></activity>
        <activity android:name="Settings"></activity>
        <activity android:name="Help"></activity>
        <activity android:name="Go"></activity>
    </application>


</manifest>
