<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="bground">#FFF</color>
    <color name="blue">#1C86EE</color>
    <color name="black">#000000</color>
    <color name="red">#CC1100</color>
    <style name="whiteTab" parent="@android:style/Widget.TabWidget">
        <item name="android:textAppearance">@style/whiteTextApperance</item>
    </style>
    <style name="whiteTextApperance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textColor">#000</item>
    </style>
    <style name="MyTheme" parent="android:Theme.Light">
        <item name="android:tabWidgetStyle">@style/whiteTab</item>
        <item name="android:windowTitleSize">35dip</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
        <item name="android:windowTitleStyle">@style/whiteTab</item>
    </style>
    <style name="MyThemeDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@color/black</item>
        <item name="android:windowBackground">@color/bground</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textAppearance">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:colorBackgroundCacheHint">@color/black</item>
    </style>
    <style name="CustomWindowTitleBackground">
        <item name="android:background">@mipmap/header_bground</item>
    </style>
    <style name="CustomTheme" parent="android:Theme">
        <item name="android:windowTitleSize">35dip</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
        <item name="android:windowTitleStyle">@style/whiteTab</item>
    </style>
</resources>